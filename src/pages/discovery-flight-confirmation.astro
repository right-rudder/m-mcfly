---
import BaseLayout from "../layouts/BaseLayout.astro";
import { PHONE_NUMBER } from "../consts";
import HeroFull from "../components/HeroFull.astro";

const headerData = {
  eyebrow: "Contact Confirmation",
  title: "Thank You for choosing McFly Education",
  paragraph:
    "We’ve received your message! A member of the McFly Education team will get back to you shortly. In the meantime, feel free to explore our training programs or contact us if you have any immediate questions.",
  image: "/src/assets/stock/hero-homepage.jpg",
  alt: "Airplane flying over mountains during sunset",
};
---

<BaseLayout
  siteTitle="Thank You for Contacting McFly Education"
  siteDescription="We’ve received your message! A member of the McFly Education team will get back to you shortly. In the meantime, feel free to explore our training programs or contact us if you have any immediate questions."
>
  <div class="bg-accent-950 p-12"></div>
  <section class="flex justify-center py-20">
    <div
      class="from-main-blue absolute top-0 h-[20vh] w-full bg-gradient-to-bl from-0% via-transparent via-30%"
    >
    </div>
    <div class="text-center md:w-4/5 lg:w-3/5">
      <h2 class="py-10 text-4xl font-bold">Thank you for contacting us</h2>

      <div class="flex flex-row justify-center">
        <div class="mb-10 rounded-full bg-green-200 px-4 py-3">
          <div class="text-5xl text-green-700">✓</div>
        </div>
      </div>

      <p class="px-5">
        Thank you for contacting McFly Education. We are excited to work with
        you soon. We will review your message and respond within 1-2 business
        days. <br />
        You can also call us at <a
          href=`tel:${PHONE_NUMBER}`
          class="hover:text-main-color hover:underline">{PHONE_NUMBER}</a
        >.
      </p>

      <div class="flex flex-row justify-center pt-10">
        <a href="/">
          <div class="btn-primary mb-10 w-52">HOME</div>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
