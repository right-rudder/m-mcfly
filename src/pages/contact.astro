---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSmall from "../components/HeroSmall.astro";
import ContactForm from "../components/ContactForm.astro";

const CONTACT_US_FORM_WEBHOOK_URL = import.meta.env.CONTACT_WEBHOOK_URL;
const PORTAL_API_KEY = import.meta.env.PORTAL_API_KEY;
const PORTAL_ACCOUNT_ID = import.meta.env.ACCOUNT_ID;

const pageData = {
  eyebrow: "Contact Us",
  title: "We're Here to Help",
  subtitle: "",
  primaryImage: "/src/assets/stock/hero-homepage.jpg",
  primaryAlt: "Airplane flying over mountains during sunset",
};
---

<BaseLayout
  siteTitle="Contact McFly Education | Cable Airport Flight School"
  siteDescription="Get in touch with McFly Education flight school at Cable Airport, Upland, CA. Ask questions about flight training, schedule a discovery flight, or learn about our programs. Call (909) 262-5236 or fill out our contact form."
  siteKeywords="contact flight school, Cable Airport contact, McFly Education contact, flight school inquiries, flight training questions, schedule discovery flight, flight lesson information, aviation school contact, flight instructor contact, Cable Airport flight school phone"
>
  <HeroSmall data={pageData} />
  <ContactForm
    webhook={CONTACT_US_FORM_WEBHOOK_URL}
    cpApi={PORTAL_API_KEY}
    accId={PORTAL_ACCOUNT_ID}
    campaign="contact-us"
    redirect="/contact-confirmation"
  />
</BaseLayout>
