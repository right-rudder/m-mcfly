---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
	<section class="bg-gradient-to-b from-blue-50 to-white">
		<div class="container mx-auto px-4 py-20 text-center">
			<h1 class="text-4xl font-bold mb-4">Welcome to My Astro Site</h1>
			<p class="text-lg text-gray-700 mb-8">
				This is a simple hero section to showcase the layout.
			</p>
			<a
				href="#"
				class="inline-block bg-blue-600 text-white px-6 py-3 rounded-full hover:bg-blue-700 transition"
				>Get Started</a
			>
		</div>
	</section>
</BaseLayout>
