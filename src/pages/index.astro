---
import HeroFull from "../components/HeroFull.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <HeroFull
    data={{
      eyebrow: "Our Blog",
      title: "Discover Amazing Places",
      subtitle: "Welcome to my website!",
      primaryImage: "/src/assets/blog-placeholder-5.jpg",
      primaryAlt: "Hero Image",
      styling: "relative flex h-screen overflow-hidden object-cover",
    }}
  />
  <section class="bg-gradient-to-b from-blue-50 to-white">
    <div class="container mx-auto px-4 py-20 text-center">
      <h1 class="mb-4 text-4xl font-bold">Welcome to My Astro Site</h1>
      <p class="mb-8 text-lg text-gray-700">
        This is a simple hero section to showcase the layout.
      </p>
      <a
        href="#"
        class="inline-block rounded-full bg-blue-600 px-6 py-3 text-white transition hover:bg-blue-700"
        >Get Started</a
      >
    </div>
  </section>
</BaseLayout>
