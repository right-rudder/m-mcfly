---
import HeroHomepage from "../components/HeroHomepage.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroCards from "../components/HeroCards.astro";
import HomePageAbout from "../components/HomePageAbout.astro";
import ProgramsList from "../components/ProgramsList.astro";
import CTAWhyUs from "../components/CTAWhyUs.astro";
import ImageComp from "../components/ImageComp.astro";
import ContactForm from "../components/ContactForm.astro";
import TestimonialsCarousel from "../components/react/TestimonialsCarousel.jsx";
import CTAIntroFlight from "../components/CTAIntroFlight.astro";
import contactData from "../data/forms/contact.js";
import InstagramFeed from "../components/InstagramFeed.astro";
---

<BaseLayout
  siteTitle="Flying Lessons in Northeast Los Angeles | McFly Education, Cable Airport"
  siteDescription="Experience personalized flying lessons at Cable Airport in Los Angeles with McFly Education. Our flexible scheduling and hands-on approach help you learn faster and build confidence from your very first lesson."
  siteKeywords="flying lessons Los Angeles, Cable Airport flight school, flying lessons Upland CA, learn to fly Los Angeles, flight training Northeast LA, private pilot lessons Cable Airport, flight instructor Los Angeles, aviation training Upland, flight school California, personalized flight training, discovery flight Los Angeles, aviation education LA"
>
  <div class="relative min-h-[115vh]">
    <ImageComp
      src="/src/assets/stock/mcfly-education-cable-airport-flying-lessons-los-angeles.jpg"
      alt="A small aircraft flying over a scenic landscape during sunset."
      classes="absolute inset-0 h-full w-full object-cover"
      loading="eager"
      quality={100}
    />
    <div
      class="relative z-30 container mx-auto flex h-full w-full max-w-[98rem] flex-col justify-center px-6 md:px-20"
    >
      <!-- Hero section -->
      <HeroHomepage
        data={{
          eyebrow: "Fly with McFly",
          title: "Flying Lessons in Northeast Los Angeles, Cable Airport",
          paragraph:
            "With flexible scheduling, more hands-on control, and a people-first approach, youâ€™ll learn faster and build confidence from the very first lesson. ",
          styling:
            "relative min-h-[60vh] overflow-hidden flex flex-row items-end pt-20 lg:pt-40",
        }}
      />
      <HeroCards />
    </div>
    <div class="pointer-events-none absolute inset-0 z-20 bg-black/50"></div>
  </div>
  <HomePageAbout />
  <ProgramsList />
  <CTAWhyUs />
  <InstagramFeed />
  <TestimonialsCarousel
    items={[]}
    className="from-accent-950 via-accent-950/80 to-accent-950 bg-gradient-to-b px-5 py-16 text-white md:px-8 md:py-20 lg:px-10 lg:py-24"
    client:load
  />
  <ContactForm content={contactData} />
  <CTAIntroFlight />
</BaseLayout>
