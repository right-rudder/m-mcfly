---
const { data } = Astro.props;
import ImageComp from "./ImageComp.astro";
---

<section class="relative h-[100vh] min-h-fit lg:h-[85vh]">
  <ImageComp
    src={data.image}
    alt={data.alt}
    classes={`object-cover h-full w-full`}
    loading="eager"
  />

  <div
    class="absolute inset-0 flex items-center px-5 text-left text-white backdrop-brightness-50 md:px-10 lg:px-20"
  >
    <div
      class="mt-20 flex translate-y-5 flex-col gap-3 md:w-5/6 lg:mt-32 lg:gap-6 xl:w-2/3"
    >
      <p class="eyebrow font-semibold uppercase lg:text-base">
        {data.eyebrow}
      </p>
      <h1
        class="font-display max-w-2xl text-4xl font-black italic lg:max-w-6xl lg:text-6xl"
      >
        {data.title}
      </h1>
      {
        data.paragraph && (
          <h2 class="text-2xl font-semibold lg:text-3xl">{data.paragraph}</h2>
        )
      }

      <div class="mt-4 flex flex-wrap gap-4">
        {
          data.buttons &&
            data.buttons.map(
              (button: { href: string; style: string; text: string }) => (
                <a href={button.href} class={button.style}>
                  {button.text}
                </a>
              )
            )
        }
      </div>
    </div>
  </div>
</section>
