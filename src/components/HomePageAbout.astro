---

const data = {
  eyebrow: "ABOUT AVIA",
  title: [
    "Your Trusted Pathway To",
    "Excellence In Professional",
    "Pilot Careers",
  ],
  quote: `"A great pilot is not born from talent alone but from discipline, persistence and an unshakable passion for the skies."`,
  quoteAuthor: "Capt. Alexander Moore, Founder & CEO",
  statValue: "32+",
  statLabel: "Years of aviation excellence",
  body: "With expert instructors and advanced resources we equip aspiring pilots with skills and confidence to thrive in aviation.",
  ctaLabel: "Read More",
  ctaHref: "#",
  rightImage: {
    src: "https://images.unsplash.com/photo-1536924940846-227afb31e2a5?q=80&w=1600&auto=format&fit=crop",
    alt: "Inside a commercial cockpit",
  },
  bottomImage: {
    src: "https://images.unsplash.com/photo-1521043723867-92a47f57a4af?q=80&w=1200&auto=format&fit=crop",
    alt: "Twin-engine airplane on the ramp",
  },
};

---

<section class="relative isolate -z-0 overflow-hidden bg-[#0b1320] text-white">
  {/* soft radial glow */}
  <div
    class="pointer-events-none absolute inset-0 -z-10 opacity-40"
    style="background: radial-gradient(1200px 600px at 15% 20%, rgba(59,130,246,.25), transparent 60%);"
  >
  </div>

  <div class="mx-auto max-w-7xl px-5 py-12 md:px-8 md:py-16 lg:px-10 lg:py-20">
    <div class="grid items-start gap-10 lg:grid-cols-2 lg:gap-14">
      {/* LEFT: Headline, quote, stat & small image */}
      <div>
        <p
          class="text-primary-200/80 mb-4 inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-3 py-1 text-[11px] tracking-widest uppercase"
        >
          <span class="size-1.5 rounded-full bg-yellow-400/90"></span>
          {data.eyebrow}
        </p>

        <h1
          class="text-4xl leading-tight font-bold tracking-tight sm:text-5xl lg:text-[56px]"
        >
          {
            Array.isArray(data.title)
              ? data.title.map((line) => <span class="block">{line}</span>)
              : data.title
          }
        </h1>

        {/* Quote card */}
        <div
          class="mt-6 rounded-2xl border border-white/10 bg-white/5 p-5 md:p-6"
        >
          <div class="flex items-start gap-3">
            <span class="text-3xl leading-none text-yellow-400 select-none"
              >‚Äù</span
            >
            <p class="text-sm/6 text-gray-200 md:text-base/7">{data.quote}</p>
          </div>
          <p class="mt-3 text-xs text-gray-400 md:text-sm">{data.quoteAuthor}</p>
        </div>

        {/* Stat */}
        <div class="mt-7 flex items-end gap-5">
          <span class="text-6xl font-extrabold text-yellow-400 sm:text-7xl"
            >{data.statValue}</span
          >
          <div class="pb-2">
            <p class="text-xs tracking-widest text-gray-400 uppercase">
              Years of Aviation
            </p>
            <p class="-mt-0.5 font-medium text-gray-200">{data.statLabel}</p>
          </div>
        </div>

        {
          /* Small aircraft image (mobile below text; on lg we keep it visible under quote) */
        }
        <figure class="mt-7">
          <img
            src={data.bottomImage.src}
            alt={data.bottomImage.alt}
            class="aspect-[4/3] w-full max-w-md rounded-3xl object-cover shadow-2xl ring-1 ring-white/10"
            loading="lazy"
          />
        </figure>
      </div>

      {/* RIGHT: Big image, body, CTA */}
      <div class="lg:pl-4">
        <figure class="relative">
          <img
            src={data.rightImage.src}
            alt={data.rightImage.alt}
            class="aspect-[4/3] w-full rounded-[32px] object-cover shadow-[0_20px_60px_rgba(0,0,0,0.45)] ring-1 ring-white/10 md:aspect-[5/4]"
          />
        </figure>

        <p class="mt-6 text-gray-300 md:text-lg/8">
          {data.body}
        </p>

        <a
          href={data.ctaHref}
          class="mt-5 inline-flex items-center gap-2 rounded-full border border-white/15 bg-white/10 px-5 py-3 text-sm font-semibold transition hover:bg-white/15 focus-visible:ring-2 focus-visible:ring-white/30 focus-visible:ring-offset-2 focus-visible:ring-offset-[#0b1320] focus-visible:outline-none"
        >
          {data.ctaLabel}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            class="size-4"
            fill="none"
            stroke="currentColor"
            stroke-width="1.75"
          >
            <path
              d="M5 12h14M13 5l7 7-7 7"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
