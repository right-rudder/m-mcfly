---
import { GoGoal } from "react-icons/go";
import { FaPeopleGroup } from "react-icons/fa6";
import { AiFillSafetyCertificate } from "react-icons/ai";

const facts = [
  {
    title: "Goal-Oriented Training",
    icon: "/src/assets/icons/pilot-icon.svg",
  },
  {
    title: "Community-Driven Approach",
    icon: "/src/assets/icons/aircraft-icon.svg",
  },
  {
    title: "Safety Above All",
    icon: "/src/assets/icons/training-icon.svg",
  },
];
---

<section class="relative">
  <div
    class="container flex flex-col-reverse items-center gap-10 border-b border-white py-12 text-center md:flex-row-reverse md:items-start md:py-20 md:text-left"
  >
    <div
      class="mb-12 flex w-full flex-col items-center md:mb-0 md:w-[30%] md:items-start md:text-left"
    >
      <p class="text-md mb-12 text-white">
        Our commitment to excellence and safety ensures you receive top-tier
        aviation education tailored to your goals.
      </p>
      <a
        href="/enrollment"
        class="ml-2 inline-flex items-center gap-1 text-lg font-semibold text-yellow-400 hover:underline"
      >
        Register Now
        <svg
          viewBox="0 0 24 24"
          class="size-4"
          fill="none"
          stroke="currentColor"
          stroke-width="1.75"
        >
          <path
            d="M5 12h14M13 5l7 7-7 7"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </a>
    </div>
    <div class="hidden md:grid w-full gap-8 md:grid-cols-3">
      {
        facts.map((fact) => (
          <div class="translate-y-0 rounded-lg border border-white/30 bg-white/20 p-6 shadow-lg transition-transform duration-300 hover:translate-y-[-6px]">
            {(() => {
              if (fact.title === "Goal-Oriented Training")
                return (
                  <GoGoal className="mx-auto md:mx-0 size-12 text-yellow-400 mb-4" />
                );
              if (fact.title === "Community-Driven Approach")
                return <FaPeopleGroup className="mx-auto md:mx-0 size-12 text-yellow-400 mb-4" />;
              if (fact.title === "Safety Above All")
                return <AiFillSafetyCertificate className="mx-auto md:mx-0 size-12 text-yellow-400 mb-4" />;
              return null;
            })()}
            <h2 class="mb-2 text-lg font-semibold text-white md:text-2xl">
              {fact.title}
            </h2>
          </div>
        ))
      }
    </div>
  </div>
</section>
