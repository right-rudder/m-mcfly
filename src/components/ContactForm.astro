---
import { ADDRESS_LINE_1, ADDRESS_LINE_2, PHONE_NUMBER } from "../consts";

const content = {
  eyebrow: "Contact Us",
  heading: "Let’s Plan Your Flight",
  subheading:
    "Contact our school today for expert guidance, program details, and professional advice to start your journey toward mastering the skies.",
  info: {
    title: "Give Us A Call Or Drop By Our Place",
    intro:
      "We’re here to assist you with any questions or to help you get started on your aviation journey.",
    locationLabel: "Our Location",
    addressLine1: ADDRESS_LINE_1,
    addressLine2: ADDRESS_LINE_2,
    phoneLabel: "Phone Number",
    phoneValue: PHONE_NUMBER,
    emailLabel: "Our Email",
    emailValue: "hola@dominantsite.com",
  },
  form: {
    labels: {
      name: "Name",
      email: "Email",
      phone: "Phone Number",
      subject: "Subject",
      message: "Message",
    },
    placeholders: {
      name: "Your Real Name",
      email: "example@yourmail.com",
      phone: "+1 234 5...",
      subject: "Write Your Subject",
      message: "Write your message here...",
    },
    cta: "Send Message",
  },
};
---

<section
  class="bg-black px-4 py-12 sm:px-6 lg:px-8 lg:py-20"
  aria-labelledby="contact-heading"
>
  <div class="grid grid-cols-1 items-stretch gap-8 lg:grid-cols-2 lg:gap-10 max-w-7xl mx-auto">
    <!-- LEFT: Info panel -->
    <div
      class="relative overflow-hidden rounded-3xl text-white"
    >
      <div class="text-muted-50 p-6 sm:p-8 lg:p-10">
        <h2 class="text-5xl font-extrabold tracking-tight">
          {content.info.title}
        </h2>
        <p class="text-muted-200 mt-3 max-w-prose text-md">
          {content.info.intro}
        </p>

        <ul class="mt-8 space-y-6">
          <!-- Location -->
          <li class="flex items-start gap-4">
            <span
              class="inline-flex h-10 w-10 shrink-0 items-center justify-center rounded-xl bg-yellow-400/10 ring-1 ring-yellow-300/20"
              aria-hidden="true"
            >
              <!-- Map pin icon -->
              <svg viewBox="0 0 24 24" class="h-5 w-5 text-yellow-300">
                <path
                  fill="currentColor"
                  d="M12 2a7 7 0 0 0-7 7c0 5.25 7 13 7 13s7-7.75 7-13a7 7 0 0 0-7-7Zm0 9.5a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5Z"
                ></path>
              </svg>
            </span>
            <div>
              <p class="text-muted-100 font-semibold">
                {content.info.locationLabel}
              </p>
              <p class="text-muted-300">{content.info.addressLine1}</p>
              <p class="text-muted-300">{content.info.addressLine2}</p>
            </div>
          </li>

          <!-- Phone -->
          <li class="flex items-start gap-4">
            <span
              class="inline-flex h-10 w-10 shrink-0 items-center justify-center rounded-xl bg-yellow-400/10 ring-1 ring-yellow-300/20"
              aria-hidden="true"
            >
              <!-- Phone icon -->
              <svg viewBox="0 0 24 24" class="h-5 w-5 text-yellow-300">
                <path
                  fill="currentColor"
                  d="M6.62 10.79a15.05 15.05 0 0 0 6.59 6.59l2.2-2.2a1 1 0 0 1 1.01-.24c1.11.37 2.31.57 3.58.57a1 1 0 0 1 1 1v3.49a1 1 0 0 1-1 1C10.29 22 2 13.71 2 3.99a1 1 0 0 1 1-1H6.5a1 1 0 0 1 1 1c0 1.27.2 2.47.57 3.58a1 1 0 0 1-.24 1.01l-2.2 2.21Z"
                ></path>
              </svg>
            </span>
            <div>
              <p class="text-muted-100 font-semibold">
                {content.info.phoneLabel}
              </p>
              <a
                href={`tel:${content.info.phoneValue}`}
                class="text-muted-300 hover:text-yellow-300"
              >
                {content.info.phoneValue}
              </a>
            </div>
          </li>

          <!-- Email -->
          <li class="flex items-start gap-4">
            <span
              class="inline-flex h-10 w-10 shrink-0 items-center justify-center rounded-xl bg-yellow-400/10 ring-1 ring-yellow-300/20"
              aria-hidden="true"
            >
              <!-- Mail icon -->
              <svg viewBox="0 0 24 24" class="h-5 w-5 text-yellow-300">
                <path
                  fill="currentColor"
                  d="M20 4H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2Zm0 4-8 5L4 8V6l8 5 8-5v2Z"
                ></path>
              </svg>
            </span>
            <div>
              <p class="text-muted-100 font-semibold">
                {content.info.emailLabel}
              </p>
              <a
                href={`mailto:${content.info.emailValue}`}
                class="text-muted-300 hover:text-yellow-300"
              >
                {content.info.emailValue}
              </a>
            </div>
          </li>
        </ul>
      </div>
    </div>

    <!-- RIGHT: Form -->
    <div
      class="bg-primary-500/30 rounded-3xl p-6 ring-1 ring-primary-200/70 sm:p-8 lg:p-10 text-white font-semibold"
    >
      <p
        class="eyebrow-dark inline-flex items-center gap-2 px-3 py-1 text-[11px] tracking-widest uppercase"
      >
        <span class="size-1.5 rounded-full bg-yellow-400/90"></span>
        {content.eyebrow}
      </p>
      <h2
        id="contact-heading"
        class="mt-2 text-4xl font-extrabold lg:text-5xl"
      >
        {content.heading}
      </h2>
      <p class="text-muted-300 mt-4 max-w-prose">
        {content.subheading}
      </p>

      <form
        class="mt-8 space-y-6"
        method="post"
        action="#"
        onsubmit="event.preventDefault(); alert('This is a demo form. Hook it up to your endpoint.');"
      >
        <!-- Row 1 -->
        <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
          <div class="flex flex-col">
            <label for="name" class="text-muted-200 text-sm font-medium">
              {content.form.labels.name}
              <span class="text-yellow-300">*</span>
            </label>
            <input
              id="name"
              name="name"
              type="text"
              required
              placeholder={content.form.placeholders.name}
              class="bg-muted-900/70 text-muted-50 placeholder:text-muted-400 mt-2 h-12 rounded-2xl border border-white/10 px-4 outline-none focus:border-yellow-300/40 focus:ring-2 focus:ring-yellow-300/30"
            />
          </div>
          <div class="flex flex-col">
            <label for="email" class="text-muted-200 text-sm font-medium">
              {content.form.labels.email}
              <span class="text-yellow-300">*</span>
            </label>
            <input
              id="email"
              name="email"
              type="email"
              required
              placeholder={content.form.placeholders.email}
              class="bg-muted-900/70 text-muted-50 placeholder:text-muted-400 mt-2 h-12 rounded-2xl border border-white/10 px-4 outline-none focus:border-yellow-300/40 focus:ring-2 focus:ring-yellow-300/30"
            />
          </div>
        </div>

        <!-- Row 2 -->
        <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
          <div class="flex flex-col">
            <label for="phone" class="text-muted-200 text-sm font-medium">
              {content.form.labels.phone}
              <span class="text-yellow-300">*</span>
            </label>
            <input
              id="phone"
              name="phone"
              type="tel"
              required
              placeholder={content.form.placeholders.phone}
              class="bg-muted-900/70 text-muted-50 placeholder:text-muted-400 mt-2 h-12 rounded-2xl border border-white/10 px-4 outline-none focus:border-yellow-300/40 focus:ring-2 focus:ring-yellow-300/30"
            />
          </div>
          <div class="flex flex-col">
            <label for="subject" class="text-muted-200 text-sm font-medium">
              {content.form.labels.subject}
              <span class="text-yellow-300">*</span>
            </label>
            <input
              id="subject"
              name="subject"
              type="text"
              required
              placeholder={content.form.placeholders.subject}
              class="bg-muted-900/70 text-muted-50 placeholder:text-muted-400 mt-2 h-12 rounded-2xl border border-white/10 px-4 outline-none focus:border-yellow-300/40 focus:ring-2 focus:ring-yellow-300/30"
            />
          </div>
        </div>

        <!-- Message -->
        <div class="flex flex-col">
          <label for="message" class="text-muted-200 text-sm font-medium">
            {content.form.labels.message}
            <span class="text-yellow-300">*</span>
          </label>
          <textarea
            id="message"
            name="message"
            required
            rows={6}
            placeholder={content.form.placeholders.message}
            class="bg-muted-900/70 text-muted-50 placeholder:text-muted-400 mt-2 rounded-2xl border border-white/10 px-4 py-3 outline-none focus:border-yellow-300/40 focus:ring-2 focus:ring-yellow-300/30"
          ></textarea>
        </div>

        <!-- CTA -->
        <div class="pt-2">
          <button
            type="submit"
            class="btn-primary box-shadow-[0_4px_20px_rgba(255,211,0,0.25)] hover:brightness-95 focus:outline-none focus-visible:ring-2 focus-visible:ring-yellow-300 focus-visible:ring-offset-2"
          >
            {content.form.cta}
          </button>
        </div>
      </form>
    </div>
  </div>
</section>
