---
import ImageComp from "./ImageComp.astro";
import { FaInstagram } from "react-icons/fa6";
import { PHONE_NUMBER, LOCATION, LOCATIONS } from "../consts";

const data = {
  brand: {
    name: "McFly Education",
    tagline:
      "Experience personalized flying lessons at Cable Airport in Los Angeles with McFly Education. Our flexible scheduling and hands-on approach help you learn faster and build confidence from your very first lesson.",
    phone: PHONE_NUMBER,
    address: LOCATION,
    gmapsLink: LOCATIONS[0].gMaps,
  },
  quickLinks: [
    { label: "Home", href: "/" },
    { label: "About Us", href: "/about" },
    { label: "Pilot Training", href: "/trainings" },
    { label: "Blog", href: "/blog" },
    { label: "Contact", href: "/contact" },
  ],
  usefulLinks: [
    { label: "Privacy Policy", href: "/privacy-policy-and-terms-of-service" },
    { label: "Discovery Flight", href: "/discovery-flight" },
    { label: "FAQ", href: "/first-time-pilots#faqs" },
  ],
  serviceAreas: ["Cable", "Claremont", "Rancho Cucamanga", "LaVerne", "Chino Hills"],
  social: [
    // { label: "Facebook", href: "#", icon: "facebook" },
    {
      label: "Instagram",
      href: "https://www.instagram.com/1martymcfly/",
      icon: "instagram",
    },
    // { label: "YouTube", href: "#", icon: "youtube" },
  ],
};

const Year = new Date().getFullYear();
---

<footer class="relative isolate -z-0 overflow-hidden bg-black text-white">
  <div
    class="from-primary-950/50 pointer-events-none absolute inset-0 -z-10 bg-radial-[at_80%_70%] to-transparent to-90%"
  >
  </div>
  <div class="mx-auto max-w-7xl px-5 py-16 md:px-10 lg:px-16 lg:py-20">
    <div class="grid items-start gap-12 lg:grid-cols-12 lg:gap-16">
      <!-- Brand / Intro / Contacts -->
      <div class="flex flex-col items-center lg:col-span-5">
        <ImageComp
          src="/src/assets/mcfly-logo-nav.png"
          alt="McFly Education Logo"
          classes="h-32 w-32 rounded-full ring-1 ring-white/20 object-contain"
        />

        <p class="text-muted-200/90 mt-6 max-w-prose leading-relaxed">
          {data.brand.tagline}
        </p>

        <!-- Contact blocks -->
        <div class="mt-8 grid gap-6 sm:grid-cols-2">
          <div class="flex items-start gap-3">
            <span
              class="mt-0.5 inline-flex h-9 w-9 shrink-0 items-center justify-center rounded-full bg-yellow-400/90 text-black"
              aria-hidden="true"
            >
              <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor"
                ><path
                  d="M6.6 10.8a15.5 15.5 0 006.6 6.6l2.2-2.2a1 1 0 011-.24 11 11 0 003.46.55 1 1 0 011 1V20a1 1 0 01-1 1C9.16 21 3 14.84 3 7a1 1 0 011-1h3.5a1 1 0 011 1 11 11 0 00.55 3.46 1 1 0 01-.24 1l-2.21 2.34z"
                ></path></svg
              >
            </span>
            <div>
              <p class="text-muted-300/80 text-sm">Phone Number</p>
              <a
                href={`tel:${PHONE_NUMBER}`}
                name="Call Us"
                aria-labelledby="Call Us Now"
                title="Call Us Now"
                class="cursor-pointer text-lg font-semibold tracking-wide text-white transition hover:underline"
                aria-label="Call telephone Link"
              >
                {PHONE_NUMBER}</a
              >
            </div>
          </div>

          <div class="flex items-start gap-3">
            <span
              class="mt-0.5 inline-flex h-9 w-9 shrink-0 items-center justify-center rounded-full bg-yellow-400/90 text-black"
              aria-hidden="true"
            >
              <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor"
                ><path
                  d="M12 2C7.58 2 4 5.58 4 10c0 5.25 7 12 8 12s8-6.75 8-12c0-4.42-3.58-8-8-8zm0 10.5a2.5 2.5 0 110-5 2.5 2.5 0 010 5z"
                ></path></svg
              >
            </span>
            <div>
              <p class="text-muted-300/80 text-sm">Our Location</p>
              <a
                href={data.brand.gmapsLink}
                target="_blank"
                class="cursor-pointer text-lg font-semibold tracking-wide text-white transition hover:underline"
                >{data.brand.address}</a
              >
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Links -->
      <nav aria-labelledby="quick-links" class="lg:col-span-2">
        <h2 id="quick-links" class="text-primary-500 text-2xl font-semibold">Quick Links</h2>
        <ul class="mt-6 space-y-3">
          {
            data.quickLinks.map((l) => (
              <li>
                <a class="text-muted-200/90 transition hover:text-white" href={l.href}>
                  {l.label}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>

      <!-- Useful Links -->
      <nav aria-labelledby="useful-links" class="lg:col-span-2">
        <h2 id="useful-links" class="text-primary-500 text-2xl font-semibold">Useful Links</h2>
        <ul class="mt-6 space-y-3">
          {
            data.usefulLinks.map((l) => (
              <li>
                <a class="text-muted-200/90 transition hover:text-white" href={l.href}>
                  {l.label}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>

      <!-- Service Locations (replaces newsletter) -->
      <section class="lg:col-span-3">
        <h2 class="text-primary-500 text-2xl font-semibold">Service Locations</h2>
        <p class="text-muted-200/90 mt-4 max-w-prose">
          We're based off Cable Airport in Los Angeles California, and proudly serve training across these primary
          areas. Don’t see yours? <a
            href="/contact"
            class="underline decoration-yellow-400/70 underline-offset-4 hover:text-white">Contact us</a
          >.
        </p>

        <ul class="mt-6 grid grid-cols-1 gap-3">
          {
            data.serviceAreas.map((city) => (
              <li class="bg-primary-500/50 rounded-xl border border-white/5 px-4 py-3 font-medium backdrop-blur-sm transition hover:bg-white/1">
                <span class="inline-flex items-center gap-2">
                  <svg viewBox="0 0 24 24" class="h-4 w-4" fill="currentColor" aria-hidden="true">
                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" />
                  </svg>
                  {city}
                </span>
              </li>
            ))
          }
        </ul>
      </section>
    </div>

    <!-- Divider -->
    <div class="mt-12 flex flex-col items-center justify-between gap-4 border-t border-white/10 pt-6 md:flex-row">
      <p class="text-muted-300/80 text-sm">
        McFly Education, {Year} © All Rights Reserved.
        <a href="/privacy-policy-and-terms-of-service" class="hover:text-primary-500 hover:underline">
          Privacy Policy & Terms of Service
        </a>
      </p>
      <span class="flex justify-center gap-2 text-center">
        Powered by
        <a
          href="https://rightruddermarketing.com/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-bold group flex items-center gap-2 duration-200 hover:text-white/70 hover:underline"
        >
          <ImageComp src="/src/assets/RRM-R-symbol-474.webp" alt="Right Rudder Marketing Logo" classes="h-6 w-auto" />
          More Right Rudder
        </a>
      </span>

      <div class="flex items-center gap-3">
        {
          data.social.map((s) => (
            <a
              href={s.href}
              target="_blank"
              rel="noopener noreferrer me"
              aria-label={s.label}
              class="bg-primary-500/80 grid h-10 w-10 place-content-center rounded-full transition hover:bg-white/10"
            >
              {s.icon === "facebook" && (
                <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor" aria-hidden="true">
                  <path d="M13 22v-9h3l1-4h-4V7a1 1 0 011-1h3V2h-3a5 5 0 00-5 5v2H6v4h3v9h4z" />
                </svg>
              )}
              {s.icon === "instagram" && <FaInstagram className="h-5 w-5 text-white" />}
              {s.icon === "youtube" && (
                <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor" aria-hidden="true">
                  <path d="M23.5 7.1a3 3 0 00-2.1-2.1C19.3 4.5 12 4.5 12 4.5s-7.3 0-9.4.5A3 3 0 00.5 7.1 31.2 31.2 0 000 12a31.2 31.2 0 00.5 4.9 3 3 0 002.1 2.1c2.1.5 9.4.5 9.4.5s7.3 0 9.4-.5a3 3 0 002.1-2.1A31.2 31.2 0 0024 12a31.2 31.2 0 00-.5-4.9zM9.75 15.02V8.98L15.5 12l-5.75 3.02z" />
                </svg>
              )}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>
