---
const data = {
  brand: {
    name: "AVIA",
    tagline:
      "We craft exceptional aviators with world-class training, unmatched discipline and passion to conquer skies.",
    phone: "+800-3374-4676",
    address: "456 Creative District, Ahmad Yani, Medan",
  },
  quickLinks: [
    { label: "Home", href: "/" },
    { label: "About Us", href: "/about" },
    { label: "Courses", href: "/courses" },
    { label: "Pricing", href: "/pricing" },
    { label: "Blog", href: "/blog" },
    { label: "Contact", href: "/contact" },
  ],
  usefulLinks: [
    { label: "Privacy Policy", href: "/privacy" },
    { label: "Terms & Conditions", href: "/terms" },
    { label: "Disclaimer", href: "/disclaimer" },
    { label: "Support", href: "/support" },
    { label: "FAQ", href: "/faq" },
  ],
  serviceAreas: [
    "Reno–Tahoe",
    "Carson City",
    "Truckee",
    "South Lake Tahoe",
    "Minden",
    "Sparks",
  ],
  social: [
    { label: "Facebook", href: "#", icon: "facebook" },
    { label: "Twitter", href: "#", icon: "twitter" },
    { label: "YouTube", href: "#", icon: "youtube" },
  ],
}

const Year = new Date().getFullYear();
---

<footer class="relative bg-[#0c1a24] text-muted-100">
  <div class="mx-auto max-w-7xl px-5 md:px-10 lg:px-16 py-16 lg:py-20">
    <div class="grid gap-12 lg:gap-16 lg:grid-cols-12 items-start">
      <!-- Brand / Intro / Contacts -->
      <div class="lg:col-span-5">
        <div class="flex items-center gap-3">
          <!-- Logo placeholder (replace with your Image component if desired) -->
          <div class="h-12 w-12 rounded bg-yellow-400/90 grid place-content-center">
            <svg viewBox="0 0 24 24" class="h-7 w-7 text-black" fill="currentColor" aria-hidden="true">
              <path d="M12 2l2.5 5 5.5.8-4 3.9.9 5.6L12 15l-4.9 2.3.9-5.6-4-3.9 5.5-.8L12 2z"/>
            </svg>
          </div>
          <div class="text-2xl font-semibold tracking-wide">MCFLY<span class="sr-only">Flight Education</span></div>
        </div>

        <p class="mt-6 max-w-prose text-muted-200/90 leading-relaxed">
          {data.brand.tagline}
        </p>

        <!-- Contact blocks -->
        <div class="mt-8 grid gap-6 sm:grid-cols-2">
          <div class="flex items-start gap-3">
            <span class="mt-0.5 inline-flex h-9 w-9 shrink-0 items-center justify-center rounded-full bg-yellow-400/90 text-black" aria-hidden="true">
              <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor"><path d="M6.6 10.8a15.5 15.5 0 006.6 6.6l2.2-2.2a1 1 0 011-.24 11 11 0 003.46.55 1 1 0 011 1V20a1 1 0 01-1 1C9.16 21 3 14.84 3 7a1 1 0 011-1h3.5a1 1 0 011 1 11 11 0 00.55 3.46 1 1 0 01-.24 1l-2.21 2.34z"/></svg>
            </span>
            <div>
              <p class="text-sm text-muted-300/80">Phone Number</p>
              <p class="text-lg font-semibold tracking-wide">{data.brand.phone}</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <span class="mt-0.5 inline-flex h-9 w-9 shrink-0 items-center justify-center rounded-full bg-yellow-400/90 text-black" aria-hidden="true">
              <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor"><path d="M12 2C7.58 2 4 5.58 4 10c0 5.25 7 12 8 12s8-6.75 8-12c0-4.42-3.58-8-8-8zm0 10.5a2.5 2.5 0 110-5 2.5 2.5 0 010 5z"/></svg>
            </span>
            <div>
              <p class="text-sm text-muted-300/80">Our Location</p>
              <p class="font-semibold tracking-wide">{data.brand.address}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Links -->
      <nav aria-labelledby="quick-links" class="lg:col-span-2">
        <h3 id="quick-links" class="text-2xl font-semibold">Quick Links</h3>
        <ul class="mt-6 space-y-3">
          {data.quickLinks.map((l) => (
            <li>
              <a class="text-muted-200/90 hover:text-white transition" href={l.href}>{l.label}</a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Useful Links -->
      <nav aria-labelledby="useful-links" class="lg:col-span-2">
        <h3 id="useful-links" class="text-2xl font-semibold">Useful Links</h3>
        <ul class="mt-6 space-y-3">
          {data.usefulLinks.map((l) => (
            <li>
              <a class="text-muted-200/90 hover:text-white transition" href={l.href}>{l.label}</a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Service Locations (replaces newsletter) -->
      <section class="lg:col-span-3">
        <h3 class="text-2xl font-semibold">Service Locations</h3>
        <p class="mt-4 text-muted-200/90 max-w-prose">
          We proudly serve training across these primary areas. Don’t see yours? <a href="/contact" class="underline decoration-yellow-400/70 underline-offset-4 hover:text-white">Contact us</a>.
        </p>

        <ul class="mt-6 grid grid-cols-1 sm:grid-cols-2 gap-3">
          {data.serviceAreas.map((city) => (
            <li class="rounded-xl border border-white/5 bg-white/5 px-4 py-3 backdrop-blur-sm hover:bg-white/10 transition">
              <span class="inline-flex items-center gap-2">
                <svg viewBox="0 0 24 24" class="h-4 w-4" fill="currentColor" aria-hidden="true">
                  <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                </svg>
                {city}
              </span>
            </li>
          ))}
        </ul>

        <!-- Contact email row (optional helper) -->
        <div class="mt-6 flex items-center gap-2 text-muted-200/90">
          <span class="inline-flex h-6 w-6 items-center justify-center rounded bg-white/10" aria-hidden="true">
            <svg viewBox="0 0 24 24" class="h-4 w-4" fill="currentColor"><path d="M12 13L2 6.76V18a2 2 0 002 2h16a2 2 0 002-2V6.76L12 13z"/><path d="M22 6l-10 6L2 6l10-4 10 4z"/></svg>
          </span>
          <a href="mailto:hola@dominantsite.com" class="hover:text-white">hola@dominantsite.com</a>
        </div>
      </section>
    </div>

    <!-- Divider -->
    <div class="mt-12 border-t border-white/10 pt-6 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-sm text-muted-300/80">
        Avia, {Year} © All Rights Reserved by Dex-Theme
      </p>

      <div class="flex items-center gap-3">
        {data.social.map((s) => (
          <a href={s.href} aria-label={s.label} class="grid h-10 w-10 place-content-center rounded-full bg-white/5 hover:bg-white/10 transition">
            {s.icon === "facebook" && (
              <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor" aria-hidden="true"><path d="M13 22v-9h3l1-4h-4V7a1 1 0 011-1h3V2h-3a5 5 0 00-5 5v2H6v4h3v9h4z"/></svg>
            )}
            {s.icon === "twitter" && (
              <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor" aria-hidden="true"><path d="M22 5.8a8.2 8.2 0 01-2.36.65A4.1 4.1 0 0021.4 4a8.2 8.2 0 01-2.6.99 4.1 4.1 0 00-7 3.74A11.7 11.7 0 013 4.8a4.1 4.1 0 001.27 5.47 4.06 4.06 0 01-1.85-.51v.05a4.1 4.1 0 003.3 4.02 4.1 4.1 0 01-1.85.07A4.1 4.1 0 007 15.6a8.23 8.23 0 01-5.1 1.76c-.33 0-.66-.02-.98-.06A11.6 11.6 0 006.29 19 11.6 11.6 0 0018 7.28c0-.18 0-.35-.01-.53A8.2 8.2 0 0022 5.8z"/></svg>
            )}
            {s.icon === "youtube" && (
              <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor" aria-hidden="true"><path d="M23.5 7.1a3 3 0 00-2.1-2.1C19.3 4.5 12 4.5 12 4.5s-7.3 0-9.4.5A3 3 0 00.5 7.1 31.2 31.2 0 000 12a31.2 31.2 0 00.5 4.9 3 3 0 002.1 2.1c2.1.5 9.4.5 9.4.5s7.3 0 9.4-.5a3 3 0 002.1-2.1A31.2 31.2 0 0024 12a31.2 31.2 0 00-.5-4.9zM9.75 15.02V8.98L15.5 12l-5.75 3.02z"/></svg>
            )}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
