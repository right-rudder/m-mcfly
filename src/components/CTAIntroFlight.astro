---
const data = {
  eyebrow: "YOUR PILOT CAREER START HERE",
  heading: "Take Off with McFly Aviation",
  description: "Begin your flight training today and join a global network of skilled pilots shaping the future of aviation together.",
  primary: { label: "ENROLL NOW", href: "/enroll" },
  secondary: { label: "VIEW PROGRAMS", href: "/programs" },
  image: {
    src: "/images/avia-crew.png",
    alt: "Smiling flight instructors and students in uniform",
  },
};
---

<section
  class="relative isolate mx-4 my-8 overflow-hidden rounded-3xl bg-[#0a1520] text-white lg:mx-8"
>
  {/* Backdrop gradient */}
  <div class="pointer-events-none absolute inset-0 -z-20" aria-hidden="true">
    <div
      class="absolute inset-0 bg-gradient-to-b from-[#0a1520] via-[#0a1520] to-[#08111a]"
    >
    </div>
  </div>

  {/* Topographic lines background (SVG) */}
  <div class="absolute inset-0 -z-10 opacity-[0.22] mix-blend-screen">
    <svg
      viewBox="0 0 1200 800"
      xmlns="http://www.w3.org/2000/svg"
      class="size-full"
      preserveAspectRatio="none"
    >
      <defs>
        <pattern
          id="contours"
          x="0"
          y="0"
          width="160"
          height="160"
          patternUnits="userSpaceOnUse"
        >
          <path
            d="M0 80c40-40 120-40 160 0M0 0c80 0 80 80 160 80M0 160c80 0 80-80 160-80"
            fill="none"
            stroke="#5b6a7a"
            stroke-width="0.6"
            stroke-linecap="round"
            stroke-opacity="0.45"></path>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#contours)"></rect>
    </svg>
  </div>

  <div
    class="relative grid items-center gap-6 px-6 py-16 sm:px-10 lg:grid-cols-2 lg:gap-10 lg:px-16 lg:py-24"
  >
    {/* Left: copy */}
    <div class="max-w-xl">
      <p
        class="text-[11px] font-semibold tracking-[0.22em] text-yellow-300 sm:text-xs"
      >
        {data.eyebrow}
      </p>
      <h1
        class="mt-3 text-4xl leading-tight font-extrabold sm:text-5xl lg:text-6xl"
      >
        {data.heading}
      </h1>
      <p class="mt-5 max-w-lg text-base text-white/80 sm:text-lg">
        {data.description}
      </p>

      {/* CTAs */}
      <div class="mt-8 flex flex-col gap-4 sm:flex-row sm:gap-6">
        <a
          href={data.primary?.href || "#"}
          class="inline-flex items-center justify-center rounded-2xl bg-yellow-400 px-6 py-3 font-bold text-[#0a1520] shadow-[0_4px_20px_rgba(255,211,0,0.25)] ring-offset-[#0a1520] hover:brightness-95 focus:outline-none focus-visible:ring-2 focus-visible:ring-yellow-300 focus-visible:ring-offset-2"
          >{data.primary?.label || "Primary"}</a
        >
        <a
          href={data.secondary?.href || "#"}
          class="inline-flex items-center justify-center rounded-2xl border border-white/15 px-6 py-3 font-semibold text-white/90 backdrop-blur-sm hover:bg-white/5"
          >{data.secondary?.label || "Secondary"}</a
        >
      </div>
    </div>

    {/* Right: image */}
    <div class="relative">
      <div class="relative mx-auto w-full max-w-[640px]">
        <img
          src={data.image.src}
          alt={data.image.alt}
          class="h-auto w-full object-contain drop-shadow-[0_20px_60px_rgba(0,0,0,0.6)]"
          loading="lazy"
          decoding="async"
        />
        {/* Soft light at bottom to merge with bg */}
        <div
          class="pointer-events-none absolute inset-x-0 bottom-0 h-24 bg-gradient-to-t from-[#0a1520] to-transparent"
        >
        </div>
      </div>
    </div>
  </div>
</section>
