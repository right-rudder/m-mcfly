---
const data = {
  eyebrow: "OUR PROGRAMS",
  heading: "Experience The Power Of Flight",
  subheading: "Our programs deliver hands-on training, advanced simulation and expert mentorship to help you master every aspect of flying.",
  moreLabel: "See Our Programs",
  moreHref: "#",
  items: [
    {
      title: "Private Pilot License",
      desc: "Foundation training for aspiring aviators.",
      href: "#",
      img: {
        src: "/src/assets/marty-mcfly-student.jpg",
        alt: "Private pilot training",
      },
    },
    {
      title: "Commercial Pilot License",
      desc: "Advanced skills for professional pilots.",
      href: "#",
      img: {
        src: "/src/assets/marty-mcfly-student.jpg",
        alt: "Commercial pilot briefing",
      },
    },
    {
      title: "Instrument Flight Rating",
      desc: "Master precise navigation in any weather.",
      href: "#",
      img: {
        src: "/src/assets/marty-mcfly-student.jpg",
        alt: "Instrument cockpit",
      },
    },
    {
      title: "Flight Instructor Course",
      desc: "Fly advanced complex twin engine aircraft.",
      href: "#",
      img: {
        src: "/src/assets/marty-mcfly-student.jpg",
        alt: "Instructor mentoring student",
      },
    },
  ],
}
---

<section class="relative isolate bg-gradient-to-b from-accent-950 via-accent-900 to-accent-950 text-white">
  <div class="mx-auto max-w-7xl px-5 md:px-8 lg:px-10 py-12 md:py-16 lg:py-20">
    <!-- Header -->
    <div class="flex flex-col gap-6 md:gap-4 md:flex-row md:items-start md:justify-between">
      <div class="max-w-3xl">
        <p class=" eyebrow inline-flex items-center gap-2 text-[11px] tracking-widest uppercase text-primary-200/80 bg-white/5 border border-white/10 rounded-full px-3 py-1 mb-3">
          <span class="size-1.5 rounded-full bg-yellow-400/90"></span>
          {data.eyebrow}
        </p>
        <h2 class="text-4xl sm:text-5xl lg:text-[56px] font-extrabold leading-tight tracking-tight">
          {data.heading}
        </h2>
        <p class="mt-4 text-gray-300 md:text-lg/8">{data.subheading}</p>
      </div>

      <a
        href={data.moreHref}
        class="self-start md:self-center btn-transparent"
      >
        {data.moreLabel}
        <svg viewBox="0 0 24 24" class="size-4" fill="none" stroke="currentColor" stroke-width="1.75">
          <path d="M5 12h14M13 5l7 7-7 7" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
      </a>
    </div>

    <!-- Cards -->
    <div class="mt-10 grid gap-6 sm:gap-7 md:gap-8 grid-cols-1 sm:grid-cols-2 xl:grid-cols-4">
      {data.items.map((item) => (
        <a href={item.href} class="group relative overflow-hidden rounded-[22px] ring-1 ring-white/10 bg-white/5 focus:outline-none focus:ring-2 focus:ring-yellow-400/60 focus:ring-offset-2 focus:ring-offset-[#0b1320]">
          <img
            src={item.img.src}
            alt={item.img.alt}
            class="h-64 sm:h-72 md:h-80 w-full object-cover transition duration-500 group-hover:scale-[1.03] group-hover:brightness-110 group-hover:contrast-105"
            loading="lazy"
          />
          <!-- top gradient (lightens on hover) -->
            <div class="pointer-events-none absolute inset-0 bg-gradient-to-b from-black/40 via-black/20 to-black/60 transition-colors duration-300 group-hover:from-black/25 group-hover:via-black/10 group-hover:to-black/40"></div>

          <!-- corner arrow -->
          <div class="absolute top-4 right-4">
            <div class="flex items-center justify-center rounded-full bg-white/10 backdrop-blur px-2 py-2 border border-white/15 transition group-hover:bg-white/20 group-hover:border-white/25">
              <svg viewBox="0 0 24 24" class="size-5 text-white/90" fill="none" stroke="currentColor" stroke-width="1.75">
                <path d="M5 12h14M13 5l7 7-7 7" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
            </div>
          </div>

          <!-- text overlay bottom (flex to keep uniform baseline) -->
          <div class="absolute inset-0 flex flex-col justify-end p-5 sm:p-6">
            <h3 class="text-lg sm:text-xl font-extrabold drop-shadow [text-shadow:_0_1px_1px_rgba(0,0,0,.45)] min-h-[28px]">
              <span class="text-yellow-400">{item.title}</span>
            </h3>
            <p class="mt-1 text-sm text-gray-200/90 max-w-sm min-h-[40px] leading-snug">
              {item.desc}
            </p>
          </div>

          <!-- focus / hover ring -->
          <span class="absolute inset-0 rounded-[22px] ring-1 ring-white/10 group-hover:ring-white/30 transition" aria-hidden="true"></span>
        </a>
      ))}
    </div>

    <!-- Footer hint (optional) -->
    <div class="mt-10 text-center text-md text-gray-300">
      Your Aviation Career Starts Here
      <a href="#" class="ml-2 inline-flex items-center gap-1 font-semibold text-yellow-400 hover:underline">
        Register Now
        <svg viewBox="0 0 24 24" class="size-4" fill="none" stroke="currentColor" stroke-width="1.75">
          <path d="M5 12h14M13 5l7 7-7 7" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
      </a>
    </div>
  </div>
</section>
