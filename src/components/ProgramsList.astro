---
const data = {
  eyebrow: "OUR PROGRAMS",
  heading: "Experience The Power Of Flight",
  subheading: "Our programs deliver hands-on training, advanced simulation and expert mentorship to help you master every aspect of flying.",
  moreLabel: "More Programs",
  moreHref: "#",
  items: [
    {
      title: "Private Pilot License",
      desc: "Foundation training for aspiring aviators.",
      href: "#",
      img: {
        src: "https://images.unsplash.com/photo-1541976076758-347942db1970?q=80&w=1600&auto=format&fit=crop",
        alt: "Private pilot training",
      },
    },
    {
      title: "Commercial Pilot License",
      desc: "Advanced skills for professional pilots.",
      href: "#",
      img: {
        src: "https://images.unsplash.com/photo-1591076482161-42c58a6f2b8f?q=80&w=1600&auto=format&fit=crop",
        alt: "Commercial pilot briefing",
      },
    },
    {
      title: "Instrument Flight Rating",
      desc: "Master precise navigation in any weather.",
      href: "#",
      img: {
        src: "https://images.unsplash.com/photo-1519671482749-fd09be7ccebf?q=80&w=1600&auto=format&fit=crop",
        alt: "Instrument cockpit",
      },
    },
    {
      title: "Flight Instructor Course",
      desc: "Fly advanced complex twin engine aircraft.",
      href: "#",
      img: {
        src: "https://images.unsplash.com/photo-1514933651103-005eec06c04b?q=80&w=1600&auto=format&fit=crop",
        alt: "Instructor mentoring student",
      },
    },
  ],
}
---

<section class="relative isolate bg-[#0b1320] text-white">
  <div class="mx-auto max-w-7xl px-5 md:px-8 lg:px-10 py-12 md:py-16 lg:py-20">
    <!-- Header -->
    <div class="flex flex-col gap-6 md:gap-4 md:flex-row md:items-start md:justify-between">
      <div class="max-w-3xl">
        <p class="inline-flex items-center gap-2 text-[11px] tracking-widest uppercase text-primary-200/80 bg-white/5 border border-white/10 rounded-full px-3 py-1 mb-3">
          <span class="size-1.5 rounded-full bg-yellow-400/90"></span>
          {data.eyebrow}
        </p>
        <h2 class="text-4xl sm:text-5xl lg:text-[56px] font-extrabold leading-tight tracking-tight">
          {data.heading}
        </h2>
        <p class="mt-4 text-gray-300 md:text-lg/8">{data.subheading}</p>
      </div>

      <a
        href={data.moreHref}
        class="self-start md:self-center rounded-full border border-white/15 bg-white/10 px-5 py-3 text-sm font-semibold hover:bg-white/15 transition inline-flex items-center gap-2 whitespace-nowrap mt-2"
      >
        {data.moreLabel}
        <svg viewBox="0 0 24 24" class="size-4" fill="none" stroke="currentColor" stroke-width="1.75">
          <path d="M5 12h14M13 5l7 7-7 7" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
      </a>
    </div>

    <!-- Cards -->
    <div class="mt-10 grid gap-6 sm:gap-7 md:gap-8 grid-cols-1 sm:grid-cols-2 xl:grid-cols-4">
      {data.items.map((item) => (
        <a href={item.href} class="group relative overflow-hidden rounded-[22px] ring-1 ring-white/10 bg-white/5">
          <img
            src={item.img.src}
            alt={item.img.alt}
            class="h-64 sm:h-72 md:h-80 w-full object-cover transition duration-500 group-hover:scale-[1.03]"
            loading="lazy"
          />
          <!-- top gradient -->
          <div class="pointer-events-none absolute inset-0 bg-gradient-to-b from-black/30 via-black/10 to-black/40"></div>

          <!-- corner arrow -->
          <div class="absolute top-4 right-4">
            <div class="flex items-center justify-center rounded-full bg-white/10 backdrop-blur px-2 py-2 border border-white/15 group-hover:bg-white/15 transition">
              <svg viewBox="0 0 24 24" class="size-5 text-white/90" fill="none" stroke="currentColor" stroke-width="1.75">
                <path d="M5 12h14M13 5l7 7-7 7" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
            </div>
          </div>

          <!-- text overlay bottom -->
          <div class="absolute inset-x-0 bottom-0 p-5 sm:p-6">
            <h3 class="text-lg sm:text-xl font-extrabold drop-shadow [text-shadow:_0_1px_1px_rgba(0,0,0,.45)]">
              <span class="text-yellow-400">{item.title}</span>
            </h3>
            <p class="mt-1 text-sm text-gray-200/90 max-w-sm">{item.desc}</p>
          </div>

          <!-- focus ring -->
          <span class="absolute inset-0 rounded-[22px] ring-1 ring-white/10 group-hover:ring-white/25 transition" aria-hidden="true"></span>
        </a>
      ))}
    </div>

    <!-- Footer hint (optional) -->
    <div class="mt-10 text-center text-sm text-gray-300">
      Your Aviation Career Starts Here
      <a href="#" class="ml-2 inline-flex items-center gap-1 font-semibold text-yellow-400 hover:underline">
        Register Now
        <svg viewBox="0 0 24 24" class="size-4" fill="none" stroke="currentColor" stroke-width="1.75">
          <path d="M5 12h14M13 5l7 7-7 7" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
      </a>
    </div>
  </div>
</section>
