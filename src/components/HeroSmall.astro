---
const { data } = Astro.props;
import ImageComp from "./ImageComp.astro";
---

<div class="relative flex h-[60vh] overflow-hidden">
  <ImageComp
    src={data.primaryImage}
    alt={data.primaryAlt}
    classes={`object-cover object-center h-fit`}
    loading="eager"
  />

  <div
    class="absolute inset-0 flex items-center justify-center px-5 text-center text-white backdrop-brightness-50 md:px-10 lg:px-20"
  >
    <div class="flex translate-y-5 flex-col gap-3 text-center">
      <h1
        class="font-display max-w-2xl text-4xl font-black lg:max-w-6xl lg:text-7xl leading-tight"
      >
        {data.title}
      </h1>
      {
        data.subtitle && (
          <h2 class="text-2xl font-semibold lg:text-3xl">{data.subtitle}</h2>
        )
      }
    </div>
  </div>
</div>
