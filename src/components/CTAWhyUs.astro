---
import ImageComp from "./ImageComp.astro";

const data = {
  eyebrow: "WHY CHOOSE US",
  title: "Building Wings For\nAviation Leaders",
  bullets: [
    "Guided by the skiesâ€™ finest captains",
    "Your direct gateway to global airlines",
    "Fly the most advanced training fleet",
    "Experience the future in our simulators",
  ],
  blurb: "We equip aspiring pilots with the vision, discipline, and skills needed to soar above the rest in aviation.",
  imageSrc: "/src/assets/marty-mcfly-student-handshake.jpg",
  imageAlt: "Cockpit dashboard placeholder",
};

---

<section class="relative isolate overflow-hidden bg-accent-950 text-white">
  {/* soft radial glow */}
  <div
    class="pointer-events-none absolute inset-0 -z-10 bg-radial-[at_50%_50%] from-accent-900 via-primary-950/50 to-accent-950 to-80%"
  >
  </div>
  <div class="mx-auto max-w-7xl px-5 md:px-10 lg:px-16 py-16 lg:py-24">
    <div class="grid items-center gap-10 lg:grid-cols-2">
      <!-- LEFT: image -->
      <figure class="relative">
        <ImageComp
          src={data.imageSrc}
          alt={data.imageAlt}
          classes="h-72 w-full rounded-3xl object-cover object-top -2xl md:h-96 lg:h-[28rem]"
        />
        <!-- soft inner vignette -->
        <div class="pointer-events-none absolute inset-0 rounded-3xl ring-1 ring-white/10 shadow-inner"></div>
      </figure>

      <!-- RIGHT: content -->
      <div class="max-w-2xl lg:max-w-none">
        <!-- eyebrow -->
        <p
          class="eyebrow inline-flex items-center gap-2 px-3 py-1 tracking-widest"
        >
          <span class="size-1.5 rounded-full bg-primary-500"></span>
          {data.eyebrow}
        </p>

        <!-- title -->
        <h2 class="mt-4 text-4xl font-extrabold leading-tight tracking-tight sm:text-5xl">
          {data.title.split("\n").map((line) => (
            <>
              {line}<br />
            </>
          ))}
        </h2>

        <!-- bullets -->
        <ul class="mt-6 space-y-4 text-base/7">
          {data.bullets.map((item) => (
            <li class="flex items-start gap-3">
              <span class="mt-1 inline-flex size-6 shrink-0 items-center justify-center rounded-full bg-primary-400 ring-1 ring-yellow-400/40">
                <!-- check icon -->
                <svg
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                  class="size-4 text-black"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="3"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M20 6 9 17l-5-5" />
                </svg>
              </span>
              <span class="text-muted-100">{item}</span>
            </li>
          ))}
        </ul>

        <!-- blurb -->
        <p class="mt-6 text-muted-300">
          {data.blurb}
        </p>
      </div>
    </div>
  </div>
</section>
