---
import ImageComp from "./ImageComp.astro";

const data = {
  eyebrow: "WHY CHOOSE US",
  title: "Building Wings For\nAviation Leaders",
  bullets: [
    "One-on-one training with a highly experienced instructor",
    "Comprehensive programs from private pilot to flight instructor",
    "Hands-on control from your very first lesson.",
    "Flexible scheduling that adapts to your lifestyle.",
    "A focus on discipline, persistence, and confidence in every flight.",
  ],
  blurb: "We equip aspiring pilots with the vision, discipline, and skills needed to excel above the rest in aviation.",
  imageSrc: "/src/assets/marty-mcfly-student-handshake.jpg",
  imageAlt: "Cockpit dashboard placeholder",
};

---

<section class="relative isolate overflow-hidden bg-primary-500 text-accent-950">
  <div class="mx-auto max-w-7xl px-5 md:px-10 lg:px-16 py-16 lg:py-24">
    <div class="grid items-center gap-10 lg:grid-cols-2">
      <!-- LEFT: image -->
      <figure class="relative">
        <ImageComp
          src={data.imageSrc}
          alt={data.imageAlt}
          classes="h-72 w-full rounded-3xl object-cover object-top -2xl md:h-96 lg:h-[28rem]"
        />
        <!-- soft inner vignette -->
        <div class="pointer-events-none absolute inset-0 rounded-3xl ring-1 ring-white/10 shadow-inner"></div>
      </figure>

      <!-- RIGHT: content -->
      <div class="max-w-2xl lg:max-w-none">
        <!-- eyebrow -->
        <p
          class="eyebrow-dark inline-flex items-center gap-2 px-3 py-1 tracking-widest"
        >
          <span class="size-1.5 rounded-full bg-primary-500"></span>
          {data.eyebrow}
        </p>

        <!-- title -->
        <h2 class="mt-4 text-4xl font-extrabold leading-tight tracking-tight sm:text-5xl">
          {data.title.split("\n").map((line) => (
            <>
              {line}<br />
            </>
          ))}
        </h2>

        <!-- bullets -->
        <ul class="mt-6 space-y-4 text-base/7">
          {data.bullets.map((item) => (
            <li class="flex items-start gap-3 font-medium">
              <span class="mt-1 inline-flex size-6 shrink-0 items-center justify-center rounded-full bg-black">
                <!-- check icon -->
                <svg
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                  class="size-4 text-primary-500"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="3"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M20 6 9 17l-5-5" />
                </svg>
              </span>
              <span class="text-black">{item}</span>
            </li>
          ))}
        </ul>

        <!-- blurb -->
        <p class="mt-6 text-black font-medium">
          {data.blurb}
        </p>
      </div>
    </div>
  </div>
</section>
