---
import ImageComp from "./ImageComp.astro";
import { BiSolidPlaneAlt } from "react-icons/bi";

const { content } = Astro.props;
---

<div class="relative bg-gradient-to-b from-accent-950 to-black md:min-h-[90vh]">
  <!-- Mobile: image first, text below (no overlap) -->
  <ImageComp
    src={content.img.src}
    alt={content.img.alt}
    classes="size-full object-cover md:hidden"
  />

  <!-- Desktop: image as background -->
  <ImageComp
    src={content.img.src}
    alt={content.img.alt}
    classes="size-full object-cover absolute hidden top-0 left-0 p-4 rounded-3xl md:block"
  />

  <!-- Text box aligned to the right on desktop -->
  <div
    class="relative z-10 md:px-8 md:py-12 text-white md:mt-0 md:flex md:min-h-[28rem] md:items-center"
  >
    <div
      class="md:bg-accent-800/70 md:ring-accent-200/30 md:rounded-2xl shadow-lg md:ring-1 md:backdrop-blur-md sm:px-8 sm:py-8 md:ml-[55%] md:max-w-lg bg-accent-900 px-4 py-8"
    >
      {
        content.role && (
          <p class="eyebrow text-primary-200/80 inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-3 text-[11px] tracking-widest uppercase">
            <span class="size-1.5 rounded-full bg-yellow-400/90" />
            {content.role}
          </p>
        )
      }

      <h2 class="text-4xl font-bold tracking-tight">
        Meet {content.name}
      </h2>
      <p class="mt-4 leading-relaxed">{content.bio}</p>

      {
        content.bullets?.length > 0 && (
          <ul class="mt-6 grid gap-3 text-md lg:grid-cols-2 font-medium">
            {content.bullets.map((b: any) => (
              <li class="flex items-start gap-3">
                <BiSolidPlaneAlt className="shrink-0 inline-block size-8 text-primary-500" />
                {b}
              </li>
            ))}
          </ul>
        )
      }
    </div>
  </div>
</div>