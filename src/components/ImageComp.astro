---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

const {
  src,
  alt,
  classes = "",
  quality = 70,
  loading = "lazy",
  widths: userWidths,
  sizes: userSizes,
} = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/**/*.{jpeg,jpg,png,gif,webp,avif,svg}",
);

if (!images[src])
  throw new Error(
    `"${src}" does not exist in glob: "src/assets/**/*.{jpeg,jpg,png,gif,webp,avif,svg}"`,
  );

const image = await images[src]();
const { width } = image.default;

const widths = userWidths ?? [240, 540, 720, 1080, 1440, width];
const sizes =
  userSizes ??
  `(max-width: 240px) 240px, (max-width: 540px) 540px, (max-width: 720px) 720px, (max-width: 1080px) 1080px, (max-width: 1440px) 1440px, ${width}px`;
---

<Image
  src={image.default}
  alt={alt}
  class={classes}
  quality={quality}
  widths={widths}
  sizes={sizes}
  loading={loading}
/>
