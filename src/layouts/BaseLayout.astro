---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Navbar from "../components/react/Navbar.jsx";
const { pathname } = Astro.url;
const { siteTitle, siteDescription, siteImage } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead
      title={siteTitle || SITE_TITLE}
      description={siteDescription || SITE_DESCRIPTION}
      image={siteImage}
    />
  </head>

  <body>
    <header>
      <Navbar pathname={pathname} client:load />
    </header>
    <main>
      <slot name="hero" />
      <slot />
    </main>
    <Footer />
  </body>
</html>
